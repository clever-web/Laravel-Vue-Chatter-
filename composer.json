    "license": "MIT",
    "authors": [
        {
            "name": "Tony Lea",
            "email": "tony@devdojo.com"
        },
        {
            "name": "Santiago Barbat",
            "email": "barbatsan@gmail.com"
        }
    ],
    "require": {
        "luketowers/purifier": "~3.0"
    },
    "require-dev": {
        "illuminate/cache": "^5.1",
        "illuminate/console": "^5.1",
        "mockery/mockery": "^0.9",
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
	    "psr-4": {
	      "Chatter\\Core\\": "/src"
		}
	},
